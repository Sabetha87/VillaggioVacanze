<div class="container-fluid">

    <!-- Cards -->
    <div class="row mt-5">



        @for(int i = 0; i<Model.Count; i++)
        {
           @* <div class="col-4">*@
            <div class="col-sm-10 offset-sm-1 col-md-4 offset-md-0">
                @*<div class="card img-fluid" style="width:500px">*@
                    <div class="card">
                    <img class="card-img-top" src="Immagini/@(Model[i].Titolo).jpg" alt="@Model[i].Titolo}" style="width:100%">
                   @* <div class="card-img-overlay">*@
                    <div class="card-body">
                        <h4 class="card-title">@Model[i].Titolo</h4>
                        <p class="card-text">a partire da @Model[i].AttrazioniPeriodi.Min(m=>m.prezzo)</p>
                        <p class="card-text">@Model[i].Descrizione</p>
