@using Microsoft.AspNetCore.Identity
@using VillaggioVacanze.DB.Entities
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

@inject VillaggioVacanze.DB.DBContext userDBContext

@*@model VillaggioVacanze.Models.UserModel*@

@inject RoleManager<IdentityRole> RoleManager






<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VillaggioVacanze</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @*Home*@
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                   
                </ul>

                @*Create User button*@
                @if (!SignInManager.IsSignedIn(User))
                {
                    <button type="button" class="btn btn-success  mr-3" data-toggle="modal" data-target="#CreateUserModal">
                        Registrati
                    </button>
                }
                    
                @*Create User modal*@
                <div class="modal fade" id="CreateUserModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            @*Modal header*@
                            <div class="modal-header">
                                <h4 class="modal-title">Registrati</h4>
                            </div>

                            @*Modal body*@
                            <div class="modal-body bg-light border border-secondary rounded m-3" id="CreateUserModalBody">
                                    <form id="CreateUserForm">
                                    <div class="mb-3">
                                        <label for="UserName" class="form-label">UserName</label>
                                        <input type="text" class="form-control" id="UserName">
                                    </div>
                                    <div class="mb-3">
                                        <label for="Email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="Email">
                                    </div>
                                    <div class="mb-3">
                                        <label for="Password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="Password">
                                    </div>
                                    <div class="mb-3">
                                        <label for="ConfirmPassword" class="form-label">Conferma password</label>
                                        <input type="password" class="form-control" id="ConfirmPassword">
                                    </div>
                                </form>
                                <div id="CreateUserModalResult">
                                    @*popolato da JavaScript*@
                                </div>
                            </div>

                            @*Modal footer*@
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" onclick="CreateUser()">Registrati</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Chiudi</button>
                            </div>
                        </div>
                    </div>
                </div>


                @*Login User button*@
                @if (!SignInManager.IsSignedIn(User))
                {
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#LoginUserModal">
                        Login
                    </button>
                }

                @*Login User modal*@
                <div class="modal fade" id="LoginUserModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            @*Modal header*@
                            <div class="modal-header">
                                <h4 class="modal-title">Login</h4>
                            </div>

                            @*Modal body*@
                            <div class="modal-body bg-light border border-secondary rounded m-3" id="LoginUserModalBody">
                                <form id="LoginUserForm">
                                    <div class="mb-3">
                                        <label for="LoginUserName" class="form-label">UserName</label>
                                        <input type="text" class="form-control" id="LoginUserName">
                                    </div>
                                    <div class="mb-3">
                                        <label for="LoginPassword" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="LoginPassword">
                                    </div>
                                     
                                </form>
                                <div id="LoginUserModalResult">
                                    @*popolato da JavaScript*@
                                </div>
                            </div>

                            @*Modal footer*@
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" onclick="LoginUser()">Login</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Chiudi</button>
                            </div>
                        </div>
                    </div>
                </div>


                @*Nome utente loggato a destra, cliccabile per UserPage*@
                @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                {
                    <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="UserPage">@UserManager.GetUserName(User)</a>

                }

                @*Admin loggato a destra, cliccabile per AdminPage*@
                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="AdminPage">@UserManager.GetUserName(User)</a>

                }


               

                @*Logout*@
                @if (SignInManager.IsSignedIn(User))
                {
                  
                    <button type="button" class="btn btn-primary" onclick="LogoutUser()">
                        Logout
                    </button>
                }

               

            </div>
        </nav>
    </header>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted">
        
        <section>
        <a class="footerClassA pl-5">
           
            &copy; 2023 - VillaggioVacanze -  All Rights Reserved. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

        </a>
        </section>
        <section>
            <a class="footerClassA">Follow us </a>
            <a class="footerClassA material-symbols-outlined" href="https://www.google.com/maps">
                
                    public
            
            </a>
            <a class="footerClassA material-symbols-sharp" href="https://www.google.com/gmail/about/">
                    mail
            </a>

            <a class="pr-5"></a>
        </section>
    </footer>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/varieJS.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)




</body>
</html>
